<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="MediumText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#FF000000</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SmallText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#FF000000</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!--~~~~~~~~~~~~~~~~~~~~~~~~IF97 Results~~~~~~~~~~~~~~~~~~~~-->
    <style name="IF97_Result" parent="SmallText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="Name" parent="IF97_Result">
        <item name="android:layout_weight">0.35</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="Symbol" parent="IF97_Result">
        <item name="android:layout_weight">0.12</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="Value" parent="IF97_Result">
        <item name="android:layout_weight">0.38</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="Unit" parent="IF97_Result">
        <item name="android:layout_weight">0.15</item>
        <item name="android:textIsSelectable">true</item>
    </style>
    <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->

    <style name="Spinner">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_weight">0</item>

    </style>

</resources>
